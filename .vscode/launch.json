  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach at host",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "restart": true
    },
    {
      "name": "Attach at docker",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app/"
    },
  ]
}
